// tsconfig.server.json
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2017",
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "types": ["node"]
  },
  "ts-node": {
    "esm": true,
    "transpileOnly": true
  },
  "include": ["server.js"]
}
